{
  "name": "jar-viewer-and-decompiler",
  "displayName": "JAR Viewer and Decompiler",
  "description": "Browse and display decompiled contents of Java JAR files.",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .jar",
          "command": "jar-viewer-and-decompiler.viewJarContents",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "properties": {
        "jar-viewer-and-decompiler.cfrPath": {
          "type": "string",
          "default": "/path/to/cfr.jar",
          "description": "Path to the CFR decompiler JAR file."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jarViewer",
          "title": "JAR Viewer and Decompiler",
          "icon": "media/jar-icon.svg"
        }
      ]
    },
    "views": {
      "jarViewer": [
        {
          "id": "jarContents",
          "name": "JAR Contents"
        }
      ]
    },
    "commands": [
      {
        "command": "jar-viewer-and-decompiler.viewJarContents",
        "title": "Open With JAR Viewer and Decompiler"
      },
      {
        "command": "jar-viewer-and-decompiler.openFile",
        "title": "Open File in JAR"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "jszip": "^3.10.1"
  }
}
